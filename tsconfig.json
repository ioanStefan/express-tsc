{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "allowJs": true,
        "target": "es6",
        "paths": {
            "*":[
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": ["./src/**/*"]
}